@using Microsoft.AspNetCore.Http;
@model TeamGreenWebApp.Models.Mail

@{
    ViewData["Title"] = "Content";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = Context.Session.GetString("userName");
    var userMailAddress = Context.Session.GetString("userMailAddress");
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <a href="/Sender/SendMail" class="btn btn-danger waves-effect waves-light btn-block">New Mail</a>

                            <br />
                            <br />

                            <h5>@userName</h5>
                            <span>@userMailAddress</span>

                            <br />

                            <div class="card shadow-none mt-3">
                                <div class="list-group shadow-none">
                                    <a href="/Mailbox/Inbox" class="list-group-item active"><i class="fa fa-inbox mr-2"></i>Inbox</a>
                                    <a href="/Mailbox/SpamMails"><i class="fa fa-envelope-o"></i>Spambox</a>
                                    <a href="/Mailbox/TrashMails" class="list-group-item"><i class="fa fa-trash-o mr-2"></i>Trash</a>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-9 col-md-8">
                            <div class="row">
                                <div class="col-lg-4">
                                </div>
                            </div>
                            <div class="card shadow-none mt-3 border border-light">
                                <div class="card-body">
                                    <div class="media mb-3">
                                        <div class="media-body">
                                            <h4 class="text-primary m-0">Sender:@(Model.User.Name + ' ' + @Model.User.Surname) @($"<{@Model.User.MailAddress}>")</h4>
                                            <span class="media-meta float-right">@Model.CreatedDate.ToString("dd/MM/yyyy hh:MM:ss")</span></>
                                            <br />
                                            <br />
                                            <h4>@Model.MailHeader</h4>
                                        </div>
                                    </div>
                                    <p>@Model.MailContent</p>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>